{# templates/lucky.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Magic number{% endblock %}

{% block body %}
<body style="background: linear-gradient(90deg, rgba(9,9,121,1) 4%, rgba(203,102,191,1) 53%, rgba(141,232,30,1) 85%)">
    <h1>Magic Number</h1>
    <p>Welcome to the magic number page!</p>
    <p>Your magic number is: {{ number }}</p>
    <a href="{{ asset('img/numbers.jpg')}}">
        <img src="{{ asset('img/numbers.jpg')}}" alt="numbers" width="800" height="300">
    </a>
    </body>
{% endblock %}

